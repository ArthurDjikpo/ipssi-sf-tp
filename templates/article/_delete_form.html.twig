<form method="post" action="{{ path('delete', {'id': article.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');" class="form-delete">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="btn btn-danger float-right btn-spacer"><i class="fas fa-trash"></i>&nbsp;Supprimer cet article</button>
</form>
