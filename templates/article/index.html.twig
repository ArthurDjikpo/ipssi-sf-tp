{% extends 'base.html.twig' %}

{% block title %}RocketBet | Articles{% endblock %}

{% block body %}

  <div class="card-group navbar">
    <div class="mb-1 mb-lg-0">
      <ul class="pagination">
        <li class="page-item disabled">
          <a class="page-link" href="#">&laquo;</a>
        </li>
        <li class="page-item active">
          <a class="page-link" href="#">1</a>
        </li>
        <a class="page-link" href="#">&raquo;</a>
        </li>
      </ul>
    </div>
    <div class="card border-info mb-2" style="max-width: 20rem;">
      <div class="card-body">
        <p class="card-text"><a href="{{ url('new') }}">Écrire un nouvel article</a></p>
      </div>
    </div>

  </div>

  <hr class="my-4">

  <div class="row">

  {% for article in articles %}

    <div class="col-md-3" style="display: block; background-color: lightgoldenrodyellow; margin: 0 30px 20px 30px;">
      <div class="row" style="text-align: center">
        <a href="{{ url('article', { 'id': article.id }) }}">
          <img src="http://img.over-blog-kiwi.com/1/10/82/36/20190102/ob_216360_la-beaute-est-partout-dans-la-nature.jpg" class="dev">
        </a>
      </div>
      <div class="row">
        <a href="{{ url('article', { 'id': article.id }) }}">
          <div class="col-md-12">
            <h3>{{ article.title }}</h3>
          </div>
        </a>
      </div>
      <div class="row">
        <div class="col-md-12">{{ article.author.nickname }} - {{ article.created ? article.created|date('d/m/Y') :
          '' }}</div>
      </div>
      <hr>
      <div class="row">
        <div class="col-md-12" style="margin-bottom: 10px;">
          <p>{{ article.content|slice(0, 100) }}</p>
        </div>
      </div>
    </div>

  {% else %}

    <tr>
      <td colspan="6">Aucun article n'a été trouvé</td>
    </tr>

  {% endfor %}

  </div>

{% endblock %}