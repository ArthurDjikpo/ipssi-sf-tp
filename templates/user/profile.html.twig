{% extends 'base.html.twig' %}

{% block title %}RocketBet | Profile{% endblock %}

{% block body %}

  <div class="row">
    <div class="col-md-12 article-nav">
      <a href="{{ url('default') }}" class="retour-nav"><i class="fas fa-arrow-left"></i>&nbsp;Retour</a>
      <a href="{{ url('new') }}" class="btn btn-success btn-spacer float-right"><i class="fas fa-plus"></i>&nbsp;Cr√©er un article</a>
      <a href="{{ url('userarticles', { 'id': app.user.id }) }}" class="btn btn-info float-right"><i class="fas fa-list"></i>&nbsp;Voir mes articles</a>
    </div>
  </div>

  <div class="row article-new">
    <div class="col-md-12">
      <div class="article-edit">
        <span class="article-ti-tle">Mon profile : {{ user.nickname }}</span>
        <hr class="hr-light">
        <span class="stat-label">Pseudo : </span>&nbsp;<span>{{ user.nickname }}</span><br>
        <span class="stat-label">E-mail : </span>&nbsp;<span>{{ user.email }}</span><br>
        <span class="stat-label">Articles : </span>&nbsp;<span>{{ user.articles|length }}</span><br>
        <span class="stat-label">Commentaires : </span>&nbsp;<span>{{ user.comments|length }}</span><br>
    </div>
  </div>

{% endblock %}