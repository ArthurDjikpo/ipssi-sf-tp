<!DOCTYPE html>
<html>
<head>

    <meta charset="UTF-8">
    <title>{% block title %}Accueil!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
              integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf"
              crossorigin="anonymous">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    {% endblock %}

</head>
<body>
<header>
    {% block header %}
        <div class="bs-component">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <a class="navbar-brand" href="{{ url('default') }}">ROCKET BET</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                        aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ url('default') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('index') }}">Articles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Paris</a>
                        </li>

                    </ul>
                    <ul class="navbar-nav">
                    {% if app.user == null %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('registration') }}">S'inscrire</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('login') }}">Se connecter</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                <div class="btn-group" role="group">
                                    <span id="btnGroupDrop2" class="dropdown-toggle profile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span>Bienvenue</span>&nbsp;<span class="user-navbar">{{ app.user.nickname }}</span>
                                    </span>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop2">
                                        <a class="dropdown-item" href="{{ url('user', { 'id': app.user.id }) }}">Profile</a>
                                        <a class="dropdown-item" href="{{ url('logout') }}">Me d√©connecter</a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    {% endif %}
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="text" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>

                </div>
            </nav>
        </div>

    {% endblock header %}
</header>
<div class="container">
    {% block body %}{% endblock %}
</div>
<div id="footer">
    {% block footer %}

    {% endblock %}
</div>
<script type="application/javascript">
    $(function () {
        $('button.close').click(function () {
            $(this).parent().css('display', 'none');
        });
    });
</script>
<script src="{{ asset('js/popper.js') }}"></script>
<script src="{{ asset('js/bootstrap.min.js') }}"></script>

</body>
</html>